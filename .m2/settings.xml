<?xml version="1.0" encoding="UTF-8"?>
<settings>
    <profiles>
        <profile>
            <id>nexus</id>
            <properties>
                <altSnapshotDeploymentRepository>ci.nexus::default::http://nexus:8081/repository/rm-hosted/</altSnapshotDeploymentRepository>
                <altReleaseDeploymentRepository>ci.nexus::default::http://nexus:8081/repository/rm-hosted/</altReleaseDeploymentRepository>
            </properties>
        </profile>
    </profiles>

    <activeProfiles>
        <activeProfile>nexus</activeProfile>
    </activeProfiles>

    <servers>
        <server>
            <id>ci.nexus</id>
            <username>${NEXUS_ACCOUNT_LOGIN}</username>
            <password>${NEXUS_ACCOUNT_PSW}</password>
        </server>

    </servers>

    <mirrors>
        <!--Send all requests to the public group -->
        <mirror>
            <id>ci.nexus</id>
            <mirrorOf>*,!ci.nexus</mirrorOf>
            <url>http://nexus:8081/repository/public/</url>
        </mirror>
    </mirrors>


</settings>
